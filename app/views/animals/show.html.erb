<h1>Animal Profile</h1>

<p>
  <b>Zoo Image:</b>
  <%= image_tag @animal.images.url(:small) %>
</p>

<p>
  <b>Species:</b>
  <%= @animal.animal_type %>
</p>

<p>
  <b>Name:</b>
  <%= @animal.name %>
</p>
<p>
  <b>Gender:</b>
  <%= @animal.gender %>
</p>

<p>
  <b>Date of Birth:</b>
  <%= @animal.dob %>
</p>

<p>
  <b>Breeding Status:</b>
  <%= @animal.breeding_status %>
</p>

<p>
  <b>Comments:</b>
  <%= @animal.comments %>
</p>

<p><b>Mother</b>
	<% if @mother != nil %>
		<%= link_to @mother.name, zoo_animal_path(@mother.zoo_id, @mother.id) %>
	<% else%>
		Unknown
	<%end%>
</p>

<p><b>Father</b>
	<% if @father != nil %>
		<%= link_to @father.name, zoo_animal_path(@father.zoo_id, @father.id) %>
	<% else%>
		Unknown
	<%end%>
</p>

<p><b>Children</b>
	<% @children.each do |child| %>
		<%= link_to child.name, zoo_animal_path(child.zoo_id, child.id) %>
	<% end%>
</p>

<p><b>Siblings</b>
	<% @siblings.each do |sibling| %>
		<%= link_to sibling.name, zoo_animal_path(sibling.zoo_id, sibling.id) %>
	<% end%>
</p>



<%= link_to 'Edit', edit_zoo_animal_path %> |
<%= link_to 'Back', zoo_animal_path(params[:zoo_id], '') %>
