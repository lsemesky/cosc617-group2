<h1>List of Animals</h1>
<% @species.each do |s| %>
<table>
<caption><h2><%= s.species.pluralize %></h2></caption>
<tr><th>Animal ID</th>
	<th>Animal Name</th>
	<th>Gender</th>
	<th>Breeding Status</th>
	<th></th>
</tr>
<% s.animals.each do |animal| %>

  <tr>
	<td>
		<%= animal.id %>
	</td>
    <td>
        <%= animal.name %>
    </td>
        <td>
        <%= animal.gender %>
    </td>
    <td>
        <%= animal.breeding_status %>
    </td>

    <td>
      <%= link_to 'Show', animal %><br/>
      <%= link_to 'Edit', edit_animal_path(animal) %><br/>
      <%= link_to 'Destroy', animal, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />
<% end%>
<%= link_to 'New animal', new_animal_path %>